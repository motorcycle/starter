{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "paths": {
      "@base/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
