{
  "compilerOptions": {
    "lib": [
      "dom",
      "es5",
      "es2015"
    ],
    "target": "es5",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "baseUrl": "./src",
    "paths": {
      "application/*": [
        "./application/*"
      ],
      "common/*": [
        "./common/*"
      ],
      "domain/*": [
        "./domain/*"
      ],
      "ui/*": [
        "./ui/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
